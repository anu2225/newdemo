2Ô∏è‚É£ hotel.html

<div class="container">
  <h2>Delete Hotel</h2>

  <form [formGroup]="deleteForm" (ngSubmit)="deleteHotel()">
    <div class="form-group">
      <label>Hotel ID:</label>
      <input type="number" formControlName="hotelId" placeholder="Enter hotel ID" />
    </div>

    <button type="submit" [disabled]="deleteForm.invalid">Delete Hotel</button>
  </form>

  <p *ngIf="successMessage" class="success">{{ successMessage }}</p>
  <p *ngIf="errorMessage" class="error">{{ errorMessage }}</p>
</div>


