1Ô∏è‚É£ delete-hotel.component.ts

import { Component, OnInit } from '@angular/core';
import { FormBuilder, FormGroup, Validators } from '@angular/forms';
import { HotelService } from '../../../core/services/hotelservice';

@Component({
  selector: 'app-delete-hotel',
  templateUrl: './hotel.html',
  styleUrls: ['./hotel.css']
})
export class DeleteHotelComponent implements OnInit {
  deleteForm!: FormGroup;
  successMessage: string = '';
  errorMessage: string = '';
  token: string = 'YOUR_AUTH_TOKEN_HERE'; // login token

  constructor(private fb: FormBuilder, private hotelService: HotelService) {}

  ngOnInit(): void {
    this.deleteForm = this.fb.group({
      hotelId: ['', [Validators.required, Validators.min(1)]]
    });
  }

  deleteHotel() {
    if (this.deleteForm.invalid) return;

    const id = this.deleteForm.value.hotelId;

    this.hotelService.deleteHotel(id, this.token).subscribe({
      next: (res) => {
        console.log(res); // backend message
        this.successMessage = `Hotel with ID ${id} deleted successfully!`;
        this.errorMessage = '';
        this.deleteForm.reset();
      },
      error: (err) => {
        console.error(err);
        this.errorMessage = `Failed to delete hotel with ID ${id}`;
        this.successMessage = '';
      }
    });
  }
}


