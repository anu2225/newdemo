2️⃣ Create Payment

create-payment/payment.ts

import { Component } from '@angular/core';
import { CommonModule } from '@angular/common';
import { ReactiveFormsModule, FormBuilder, FormGroup, Validators } from '@angular/forms';
import { HttpClientModule, HttpClient } from '@angular/common/http';
import { Router } from '@angular/router';

@Component({
  selector: 'app-create-payment',
  standalone: true,
  imports: [CommonModule, ReactiveFormsModule, HttpClientModule],
  templateUrl: './payment.html',
  styleUrls: ['./payment.css']
})
export class CreatePayment {
  paymentForm: FormGroup;

  constructor(private fb: FormBuilder, private http: HttpClient, private router: Router) {
    this.paymentForm = this.fb.group({
      bookingId: ['', Validators.required],
      paymentMethod: ['', Validators.required]
    });
  }

  submitPayment() {
    if (this.paymentForm.valid) {
      this.http.post('http://localhost:8080/api/payments/process', this.paymentForm.value)
        .subscribe({
          next: () => {
            alert('Payment Success!');
            this.router.navigate(['/get-all-payments']);
          },
          error: () => alert('Payment Failed!')
        });
    }
  }
}

create-payment/payment.html

<h2>Create Payment</h2>
<form [formGroup]="paymentForm" (ngSubmit)="submitPayment()">
  <label>Booking ID:</label>
  <input type="number" formControlName="bookingId" />
  <label>Payment Method:</label>
  <input type="text" formControlName="paymentMethod" />
  <button type="submit">Pay Now</button>
</form>

create-payment/payment.css

form {
  display: flex;
  flex-direction: column;
  max-width: 400px;
  margin: auto;
}
input, button {
  margin: 10px 0;
  padding: 8px;
}


